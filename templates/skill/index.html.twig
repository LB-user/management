{% extends "base.html.twig" %}

{% block title %}Gestion
{% endblock %}

{% block body %}
	<div class="container">
		<div class="overflow-auto">
			<h1>Gestion du personnel</h1>

			<h2>Gestion</h2>
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Nom</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>

					{% for skill in skills %}

						<tr class="table-active">
							<th scope="row">{{ skill.id }}</th>
							<td>{{ skill.name }}</td>
							<td>
								<a class="btn btn-info" href="{{ path("skill_show", {"id": skill.id}) }}">
									<i class="fas fa-eye"></i>
								</a>
									<a class="btn btn-secondary" href="{{ path("skill_edit", {"id": skill.id}) }}">
										<i class="fas fa-pen"></i>
									</a>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</tbody>
		</table>
	{% if is_granted("ROLE_ADMIN") %}
		<a class="btn btn-primary" href="{{ path("skill_new") }}">
			<i class="fas fa-plus"></i>
		</a>
	{% endif %}
</div></div>{% endblock %}
