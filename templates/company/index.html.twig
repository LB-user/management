{% extends "base.html.twig" %}

{% block title %}Gestion
{% endblock %}

{% block body %}
	<div class="card text-center">
		<div class="card-body overflow-auto">
			<div class="row row-cols-1 row-cols-md-6 g-4 overflow-auto">
				<div class="container d-flex justify-content-center w-100">
					<div class="card w-100">
						<div class="card-body">
							<h5 class="card-title">{{ app.user.firstname }}
								{{ app.user.lastname }}</h5>
							<p class="card-text">
								Vous êtes connecté en tant que :
								{% if is_granted("ROLE_SUPER_ADMIN") %}
									Administrateur
								{% elseif is_granted("ROLE_ADMIN") %}
									Commercial
								{% elseif (is_granted("ROLE_USER")) and app.user.parent %}
									Collaborateur
								{% else %}
									Candidat
								{% endif %}
							</p>
						</div>
						<ul class="list-group list-group-flush">
							<li class="list-group-item">{{ app.user.email }}</li>
							<li class="list-group-item">{{ app.user.address }}</li>
							<li class="list-group-item">{{ app.user.phone }}</li>
						</ul>
						<div class="card-body">
							{% if is_granted("ROLE_SUPER_ADMIN") %}
								<a class="btn btn-primary" href="{{ path("user_edit_admin", {"id": app.user.id}) }}">Modifier</a>
							{% else %}
								<a class="btn btn-primary" href="{{ path("user_edit", {"id": app.user.id}) }}">Modifier</a>
							{% endif %}

							<a class="btn btn-secondary" href="{{ path("user_show", {"id": app.user.id}) }}">Plus d'informations</a>
							<a class="btn btn-danger" href="{{ path('user_delete', {'id': app.user.id}) }}">Supprimer</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="container">
		<div class="overflow-auto">
			<h1>Gestion des Entreprises</h1>
			{% if is_granted("ROLE_ADMIN") %}
				<a class="btn btn-primary" href="{{ path("company_new") }}">Ajouter</a>
			{% endif %}
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">Id</th>
						<th scope="col">Nom de l'Entreprise</th>
						<th scope="col">Adresse de l'Entreprise</th>
						<th scope="col">Numéro de contact de l'Entreprise</th>
						<th scope="col">Actions</th>
					</tr>
				</thead>
				<tbody>

					{% for company in companies %}

						<tr class="table-active">
							<th scope="row">{{ company.id }}</th>
							<td>{{ company.name }}</td>
							<td>{{ company.address }}</td>
							<td>{{ company.contact }}</td>
							<td>
								<a class="btn btn-secondary" href="{{ path("company_show", {"id": company.id}) }}">Plus d'informations</a>
								<a class="btn btn-primary" href="{{ path("company_edit", {"id": company.id}) }}">Modifier</a>
							</td>
						</tr>

					{% endfor %}
				</tbody>
			</tbody>
		</table>
	</div>
</div>{% endblock %}
